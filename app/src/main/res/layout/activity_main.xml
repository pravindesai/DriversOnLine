<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/DriverBtn"
        android:layout_width="217dp"
        android:layout_height="54dp"
        android:background="@drawable/btn_styl"
        android:text="I can drive ."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OwnerBtn"
        app:layout_constraintVertical_bias="0.29000002" />

    <Button
        android:id="@+id/OwnerBtn"
        android:layout_width="217dp"
        android:layout_height="54dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/btn_styl"
        android:outlineAmbientShadowColor="@color/white"
        android:shadowColor="@color/c3"
        android:text="I want driver ."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/DriverBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/DriverBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="184dp"
        android:layout_height="72dp"
        android:fontFamily="@font/aclonica"
        android:text="OnLine"
        android:textColor="@color/r14"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.876"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="243dp"
        android:layout_height="82dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/aclonica"
        android:text="Drivers"
        android:textColor="@color/r14"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>